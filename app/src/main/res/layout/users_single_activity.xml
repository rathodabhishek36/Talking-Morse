<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/user_single_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:text="title"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/user_single_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_single_title"
            android:layout_marginTop="12dp"
            android:layout_toStartOf="@+id/user_single_status"
            android:text="description" />

        <TextView
            android:id="@+id/user_single_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/textView6"
            android:text="to"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/user_single_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_single_title"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/user_single_title"
            android:text="status" />

        <TextView
            android:id="@+id/user_single_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/user_single_status"
            android:layout_alignBottom="@+id/user_single_status"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/user_single_status"
            android:text="from"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/user_single_from"
            android:layout_alignBottom="@+id/user_single_from"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/user_single_from"
            android:text="@string/to" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/user_single_description"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignTop="@+id/user_single_description"
            android:backgroundTint="@color/colorPrimary"
            android:text=" get this time"
            android:textColor="@color/colorAccent"
            android:visibility="visible" />

    </RelativeLayout>

</android.support.v7.widget.CardView>